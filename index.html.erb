    <script>
        function sendEmail() {
            userName = document.getElementById("user_name").value
            userPhone = document.getElementById("user_phone").value
            userEmail = document.getElementById("user_email").value
            userMessage = document.getElementById("user_message").value

            if (userName == "" || userPhone == "" || userEmail == "" || userMessage == "") {
                alert("Todos os campos do formulário são obrigatórios.")
                return
            }

            Email.send({
                Host: "<%= ENV['HOST'] %>",
                Username: "<%= ENV['USERNAME'] %>",
                Password: "<%= ENV['PASSWORD'] %>",
                From: "<%= ENV['FROM'] %>",
                To: 'construnirengenharia@gmail.com',
                Subject: "Contato de usuário " + userEmail,
                Body: "Mensagem do usuário " + userName + " (" + userPhone + ")\n" + userMessage
            }).then(
                message => message == "OK" ? alert("Mensagem enviada!") : alert("Erro no envio")
            );
        }

        document.getElementById("send_mail").onclick = sendEmail
